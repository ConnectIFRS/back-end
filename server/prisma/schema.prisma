// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id          String        @id @default(uuid())
  name        String
  login       String        @unique
  password    String
  className   Classes       @relation(fields: [classId], references: [id])
  classId     Int
  createdAt   DateTime      @default(now())
  profilePic  String
  Likes       Likes[]
  Post        Post[]
  Comments    Comments[]
  Followers   Followers[]   @relation("UserFollower")
  Following   Followers[]
  Preferences Preferences[]
}

model Classes {
  id        Int     @id @default(autoincrement())
  className String
  Users     Users[]
}

model Post {
  id        String     @id @default(uuid())
  content   String
  coverUrl  String
  user      Users      @relation(fields: [userId], references: [id])
  userId    String
  Likes     Likes[]
  Comments  Comments[]
  createdAt DateTime   @default(now())
}

model Likes {
  id     Int    @id @default(autoincrement())
  user   Users  @relation(fields: [userId], references: [id])
  userId String
  Post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Comments {
  id        Int      @id @default(autoincrement())
  user      Users    @relation(fields: [userId], references: [id])
  userId    String
  Post      Post     @relation(fields: [postId], references: [id])
  postId    String
  content   String
  createdAt DateTime @default(now())
}

model Followers {
  id         Int    @id @default(autoincrement())
  follower   Users  @relation(fields: [followerId], references: [id])
  followerId String
  user       Users  @relation("UserFollower", fields: [userId], references: [id])
  userId     String
}

model Preferences {
  id    Int     @id @default(autoincrement())
  title String
  icon  String
  Users Users[]
}
